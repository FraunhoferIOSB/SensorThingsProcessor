<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane minHeight="400.0" minWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fraunhofer.iosb.ilt.stp.ControllerAggManager">
   <top>
      <GridPane maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="NEVER" />
         </rowConstraints>
         <children>
            <Button fx:id="buttonReload" mnemonicParsing="false" onAction="#actionReload" text="Reload" />
            <TextField fx:id="textUrl" editable="false" maxWidth="1.7976931348623157E308" text="http://localhost:8080/FROST-Server/v1.0" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS">
               <padding>
                  <Insets right="1.0" />
               </padding>
            </TextField>
            <Button mnemonicParsing="false" onAction="#actionService" text="Service URL:" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </top>
   <left>
      <GridPane minWidth="10.0" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="NEVER" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" valignment="TOP" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" valignment="BOTTOM" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" valignment="BOTTOM" vgrow="NEVER" />
         </rowConstraints>
         <children>
            <BorderPane fx:id="paneAddLevel" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" GridPane.vgrow="NEVER" />
            <Button fx:id="buttonAddLevel" mnemonicParsing="false" onAction="#actionAddLevel" text="Add Level" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </left>
   <bottom>
      <Button fx:id="buttonApplyChanges" ellipsisString="…" mnemonicParsing="false" onAction="#actionApplyChanges" text="Make It So…" BorderPane.alignment="CENTER_RIGHT" />
   </bottom>
   <center>
      <TableView fx:id="table" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
   </center>
</BorderPane>
